{% extends "::security.html.twig" %}

{% block title %}{{ parent() }} Login {% endblock %}

{% block fos_user_content %}

    {% if error %}
        <div class="alert alert-danger">
            <button class="close" data-dismiss="alert"></button>
            {{ error|trans }}
        </div>
    {% endif %}

    <!-- BEGIN LOGIN FORM -->
    <form class="login-form" action="{{ path("fos_user_security_check") }}" method="post">

        <h3 class="form-title">Login to your account</h3>

        <div class="alert alert-danger display-hide">
            <button class="close" data-close="alert"></button>
            <span>Enter any username and password.</span>
        </div>

        <div class="form-group">
            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
            <label class="control-label visible-ie8 visible-ie9">Username</label>
            <div class="input-icon">
                <i class="fa fa-user"></i>
                <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="_username" value="{{ last_username }}" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">Password</label>
            <div class="input-icon">
                <i class="fa fa-lock"></i>
                <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" id="password" name="_password" />
            </div>
        </div>

        <div class="form-actions">
            <label class="checkbox">
                <div class="checker"><span><input type="checkbox" id="remember_me" name="_remember_me" value="on" /></span></div> Remember me
            </label>
            <input type="submit" class="btn green pull-right" value="Login" />
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    </form>

{% endblock fos_user_content %}
