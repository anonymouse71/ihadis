<div class="left-navigations">
    Chapters
    <div class="nav-arrow fr"></div>
    <div class="clr"></div>
</div>

<div class="hadith-search-panel">
    <div class="hadith-search">
        Hadith
        <div class="arrow-up fr"></div>
        <form action="" method="get">
            <input name="" type="text" class="text-search" placeholder="Hadith no."/>
