{% set from =  (per_page * current) - (per_page - 1) %}
{% set to =  (per_page * current < total)? per_page * current : total %}

<div class="row">
    <div class="col-md-6">
        <small class="text-muted text-left">
            {{ total|banglaNumber }} টি ফলাফল এর মধ্যে
            {{ from|banglaNumber }} থেকে  {{ to|banglaNumber }} নং ফলাফল দেখছেন
        </small>
    </div>
    <div class="col-md-6 text-right">
        <nav>
            <ul class="pagination" style="margin: 0 0 0 10px">
                {% for link in page_links %}
                    {{ link|raw }}
                {% endfor %}
            </ul>
        </nav>
    </div>
</div>