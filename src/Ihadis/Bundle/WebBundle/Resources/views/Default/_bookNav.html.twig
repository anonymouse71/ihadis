            <h1 style="margin-top: 10px;">{{ book.titleEnglish }}</h1>
        {% else %}
            <h1 class="bn" style="margin-top: 10px;">{{ book.title }}</h1>
        {% endif %}
    </div>

    <div class="other-nav">
        <h1 style="margin-top: 10px;">{{ book.titleArabic }}</h1>
    </div>

    <div class="clr"></div>

</div>