<div class="second-nav-holder">

    <div class="fl title-holder">

        {% if app.request.cookies.has('lang') and app.request.cookies.get('lang') == 'en' %}

            <h1>{{ book.titleEnglish }}</h1>

            <select id="chapter-selection">
                {% for ch in chapters %}
                    <option value="{{ ch.number }}" {% if ch == chapter %}selected="selected"{% endif %}>{{ ch.titleEnglish }}</option>
                {% endfor %}
            </select>

            &nbsp;

            <select id="section-selection">
                {% for sec in sections %}
                    <option value="{{ sec.id }}">{{ sec.titleEnglish }}</option>
                {% endfor %}
            </select>

        {% else %}

            <h1 class="bn">{{ book.title }}</h1>

            <select id="chapter-selection" class="bn">
                {% for ch in chapters %}
                <option value="{{ ch.number }}" {% if ch == chapter %}selected="selected"{% endif %}>{{ ch.title }}</option>
                {% endfor %}
            </select>

            &nbsp;

            <select id="section-selection" class="bn">
                {% for sec in sections %}
                <option value="{{ sec.id }}">{{ sec.title }}</option>
                {% endfor %}
            </select>

        {% endif %}

    </div>

    <div class="other-nav">
        <ul style="margin-top: 10px;">
            <li class="search"><a href="#">Search</a></li>
        </ul>

    </div>

    <div class="clr"></div>

</div>