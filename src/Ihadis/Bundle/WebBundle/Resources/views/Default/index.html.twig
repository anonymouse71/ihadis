{% extends '@IhadisWeb/layout.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

    {% stylesheets
    "@IhadisWebBundle/Resources/public/css/home.css"
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}

    <div id="home">

        <div id="home-logo">
            <img src="/images/logo-big.png" />
        </div>
        <div id="home-search">
            <form>
                <input type="text" name="q" id="q" placeholder="Search by Keywords / Tags" tabindex="0"/>
            </form>
        </div>
        <div id="booklist">
            <h2>Hadith Collection</h2>
            <p class="bn">
                "কেউ হেদায়েতের  দিকে  আহ্বান করলে যতজন তার অনুসরণ করবে প্রত্যেকের সমান সওয়াবের
                অধিকারী সে হবে, তবে যারা অনুসরন করেছে তাদের সোওয়াবের কোন কমতি হবে না।" [সহিহ মুসলিমঃ ২৬৭৮]
            </p>

            <div id="all-books">
                <ul class="bjqs">
                {% for name, book in booklist %}
                    {% if loop.first %}
                    <!-- Strating new Slider page -->
                    <li>
                        <ul>
                    {% endif %}
                            <li>
                                {% if book.link.type == 'digital' %}
                                <a href="{{ path('ihadis_public_book', {'slug': book.link.slug}) }}">
                                {% else %}
                                <a href="{{ path('ihadis_pdf_book', {'bookName': name}) }}">
                                {% endif %}
                                    <img src="/images/cover/{{ book.image }}" />
                                    <span class="book-name">{{ name }}</span>
                                    <span class="cover-intro">By {{ book.collector }}</span>
                                </a>
                            </li>
                    {% if loop.index % 8 == 0 %}
                        </ul>
                    </li>
                    <!-- Ending Slider Page -->
                    <!-- Starating Slider Page -->
                    <li>
                        <ul>
                    {% endif %}
                    {% if loop.last %}
                        </ul>
                    </li>
                    <!-- Ending Slider Page -->
                    {% endif %}

                {% endfor %}
                </ul> <!-- .bjqs -->
            </div> <!-- #all-books -->

        </div>
    </div>

{% endblock %}

{% block documentReady %}
    $('#all-books').bjqs({
        'height' : 460,
        'width' : 700,
        'responsive' : false,
        'animtype': 'slide',
        'automatic': false,
        'nexttext' : "&rsaquo;",
        'prevtext' : "&lsaquo;",
        'showmarkers': false,
        'animduration': 700,
    });
{% endblock documentReady %}
