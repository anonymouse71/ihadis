    <div class="col-md-6">
        <button class="btn btn-primary" type="submit">Create</button>
        <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>
    </div>
</div>

{#{{ form_widget(form) }}#}
{{ form_end(form) }}
