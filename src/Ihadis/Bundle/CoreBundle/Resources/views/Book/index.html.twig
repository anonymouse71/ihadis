{% extends 'full_width.html.twig' %}

{% block title %}List of Books{% endblock %}

{% block breadcrumb %}

    <ul class="breadcrumb">

        <li>
            <i class="icon-home"></i>
            <a href="/">Home</a>
        </li>

    </ul>

{% endblock %}

{% block body %}

    {#<div class="table-toolbar">

        <div class="btn-group">
            <a href="{{ path('ihadis_book_add') }}" class="btn green">
                Add New Book <i class="fa fa-plus"></i>
            </a>
        </div>

    </div>#}

    <table class="table table-striped table-bordered table-hover" id="chapters">

        <thead>

            <tr>
                <th class="text-center" style="width: 40%">Book</th>
                <th class="text-center" style="width: 10%"># of Chapters</th>
                <th class="text-center" style="width: 10%"># of Sections</th>
                <th class="text-center" style="width: 10%"># of Hadiths</th>
                <th class="text-center" style="width: 20%">&nbsp;</th>
            </tr>

        </thead>

        <tbody>

            {% for book in books %}
                <tr>
                    <td>{{ book.title }}</td>
                    <td class="text-center">{{ book.chapterCount }}</td>
                    <td class="text-center">{{ book.sectionCount }}</td>
                    <td class="text-center">{{ book.hadithCount }}</td>
                    <td style="text-align: center">
                        <a href="{{ path('ihadis_chapter_list', {'book': book.id}) }}" class="btn btn-info">Chapters</a>
                        <a href="{{ path('ihadis_book_edit', {'id': book.id}) }}" class="btn blue">Edit</a>
                    </td>
                </tr>
            {% endfor %}

        </tbody>

    </table>

    <div class="dataTables_paginate paging_bootstrap">

        {{ pagerfanta(books, 'twitter_bootstrap3') }}

    </div>

{% endblock %}