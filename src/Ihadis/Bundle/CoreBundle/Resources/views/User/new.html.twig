{% extends 'full_width.html.twig' %}
{% form_theme form '::partials/form.elements.html.twig' %}
{% import '@IhadisCore/macros.html.twig' as buttons %}

{% block title %}Create New User{% endblock %}
{% block breadcrumb %}

    <ul class="breadcrumb">

        <li>
            <i class="icon-home"></i>
            <a href="/">Home</a>
            <i class="icon-angle-right"></i>
        </li>

        <li>
            <a href="{{ path('ihadis_admin_user_index') }}">Manage Users</a>
        </li>

    </ul>

{% endblock %}

{% block body %}

    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-danger">
            <button class="close" data-dismiss="alert"></button>
            {{ flashMessage|raw }}
        </div>
    {% endfor %}

    <div class="form">

        <div class="col-lg-6">

            {{ form_start(form, {'method': 'POST', 'action': path('ihadis_admin_user_create')}) }}

            <div class="form-body">
                {{ form_widget(form) }}
            </div>

            {{ buttons.action() }}
            {{ form_end(form) }}

        </div>

    </div>

{% endblock %}