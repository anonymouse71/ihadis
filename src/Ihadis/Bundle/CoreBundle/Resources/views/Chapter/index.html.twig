{% extends 'full_width.html.twig' %}

{% block title %}List of Chapters{% endblock %}

{% block body %}

    <div class="table-toolbar">

        <div class="btn-group">
            <a href="{{ path('ihadis_chapter_add') }}" class="btn green">
                Add New <i class="fa fa-plus"></i>
            </a>
        </div>

    </div>

    <table class="table table-striped table-bordered table-hover" id="chapters" style="width: 70%">

        <thead>

            <tr>
                <th>Chapter</th>
                <th>Book</th>
                <th style="width: 20%;">&nbsp;</th>
            </tr>

        </thead>

        <tbody>

            {% for chapter in chapters %}
                <tr>
                    <td>{{ chapter.title }}</td>
                    <td>{{ chapter.book.title }}</td>
                    <td style="text-align: center">
                        <a href="{{ path('ihadis_chapter_edit', {'id': chapter.id}) }}" class="btn mini blue">Edit</a>
                        <form method="post" action="{{ path('ihadis_chapter_delete', {'id': chapter.id}) }}" class="delete-action-form">
                            <input type="hidden" name="_method" value="DELETE" />
                            <input type="submit" class="btn mini red" value="Delete" />
                        </form>
                    </td>
                </tr>
            {% endfor %}

        </tbody>

    </table>

    <div class="dataTables_paginate paging_bootstrap">

        {{ pagerfanta(chapters, 'twitter_bootstrap3') }}

    </div>

{% endblock %}